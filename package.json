{
  "name": "shop",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:sw": "yarn run build && yarn run server:sw",
    "build": "ng build --configuration production",
    "build:qa": "ng build --configuration=qa",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --runInBand",
    "test:coverage": "jest --coverage",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "generate-mock-api-data": "tsc --project mock-server/tsconfig.json && node mock-server/buildScripts/generateData.js",
    "preserver:mock": "npm run generate-mock-api-data",
    "server:mock": "json-server --watch mock-server/buildScripts/db.json --port 3000",
    "server:sw": "http-server -p 5100 -c-1 dist/Shop -P http://10.0.75.1:5100",
    "doc": "compodoc -p tsconfig.doc.json -s",
    "serve:ssr:shop": "node dist/shop/server/server.mjs",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "prepare": "husky"
  },
  "engines": {
    "node": ">= 16.0.0 < 21.0.0",
    "npm": ">= 8.x <= 10.x"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/setupJest.ts"
    ],
    "tsconfig": "<rootDir>/src/tsconfig.spec.json"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.2.13",
    "@angular/common": "^18.2.13",
    "@angular/compiler": "^18.2.13",
    "@angular/core": "^18.2.13",
    "@angular/forms": "^18.2.13",
    "@angular/platform-browser": "^18.2.13",
    "@angular/platform-browser-dynamic": "^18.2.13",
    "@angular/platform-server": "^18.2.13",
    "@angular/router": "^18.2.13",
    "@angular/service-worker": "^18.2.13",
    "@angular/ssr": "^18.2.12",
    "@ngrx/effects": "^18.1.1",
    "@ngrx/entity": "^18.1.1",
    "@ngrx/router-store": "^18.1.1",
    "@ngrx/store": "^18.1.1",
    "@ngrx/store-devtools": "^18.1.1",
    "bulma": "^1.0.2",
    "express": "^4.21.1",
    "rxjs": "~7.8.1",
    "tslib": "^2.8.1",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.12",
    "@angular-eslint/builder": "18.4.3",
    "@angular-eslint/eslint-plugin": "18.4.3",
    "@angular-eslint/eslint-plugin-template": "18.4.3",
    "@angular-eslint/schematics": "18.4.3",
    "@angular-eslint/template-parser": "18.4.3",
    "@angular/cli": "~18.2.12",
    "@angular/compiler-cli": "^18.2.13",
    "@faker-js/faker": "^9.2.0",
    "@types/express": "^4.17.21",
    "@types/jasmine": "~5.1.5",
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "8.16.0",
    "@typescript-eslint/parser": "8.16.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "jasmine-core": "~5.4.0",
    "json-schema-faker": "^0.5.8",
    "json-server": "^0.17.4",
    "karma": "~6.4.2",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "prettier": "^3.4.1",
    "typescript": "~5.5.4"
  }
}
