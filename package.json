{
  "name": "shop",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:sw": "yarn run build && yarn run server:sw",
    "build": "ng build --configuration production",
    "build:qa": "ng build --configuration=qa",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --runInBand",
    "test:coverage": "jest --coverage",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "generate-mock-api-data": "tsc --project mock-server/tsconfig.json && node mock-server/buildScripts/generateData.js",
    "preserver:mock": "npm run generate-mock-api-data",
    "server:mock": "json-server --watch mock-server/buildScripts/db.json --port 3000",
    "server:sw": "http-server -p 5100 -c-1 dist/Shop -P http://10.0.75.1:5100",
    "doc": "compodoc -p tsconfig.doc.json -s",
    "serve:ssr:shop": "node dist/shop/server/server.mjs",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">= 16.0.0 < 21.0.0",
    "npm": ">= 8.x <= 10.x"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/setupJest.ts"
    ],
    "tsconfig": "<rootDir>/src/tsconfig.spec.json"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.0.3",
    "@angular/common": "^17.0.3",
    "@angular/compiler": "^17.0.3",
    "@angular/core": "^17.0.3",
    "@angular/forms": "^17.0.3",
    "@angular/platform-browser": "^17.0.3",
    "@angular/platform-browser-dynamic": "^17.0.3",
    "@angular/platform-server": "^17.0.3",
    "@angular/router": "^17.0.3",
    "@angular/service-worker": "^17.0.3",
    "@angular/ssr": "^17.0.1",
    "@ngrx/effects": "^17.0.0-rc.0",
    "@ngrx/entity": "^17.0.0-rc.0",
    "@ngrx/router-store": "^17.0.0-rc.0",
    "@ngrx/store": "^17.0.0-rc.0",
    "@ngrx/store-devtools": "^17.0.0-rc.0",
    "bulma": "^0.9.4",
    "express": "^4.18.2",
    "rxjs": "~7.8.1",
    "tslib": "^2.6.2",
    "zone.js": "~0.14.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.1",
    "@angular-eslint/builder": "17.1.0",
    "@angular-eslint/eslint-plugin": "17.1.0",
    "@angular-eslint/eslint-plugin-template": "17.1.0",
    "@angular-eslint/schematics": "17.1.0",
    "@angular-eslint/template-parser": "17.1.0",
    "@angular/cli": "~17.0.1",
    "@angular/compiler-cli": "^17.0.3",
    "@faker-js/faker": "^8.3.1",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~5.1.2",
    "@types/node": "^18.18.0",
    "@typescript-eslint/eslint-plugin": "6.11.0",
    "@typescript-eslint/parser": "6.11.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "http-server": "^14.1.1",
    "husky": "^8.0.3",
    "jasmine-core": "~5.1.1",
    "json-schema-faker": "^0.5.3",
    "json-server": "^0.17.4",
    "karma": "~6.4.2",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "prettier": "^3.1.0",
    "typescript": "~5.2.2"
  }
}
